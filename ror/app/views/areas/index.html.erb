<p style="color: green"><%= notice %></p>

<h1>Areas</h1>

<div id="areas">
  <table>
  <tr>
    <th>Default</th>
    <th>Name</th>
    <th></th>
  </tr>
  <% @areas.each do |area| %>
      <tr>
        <th><%= area.isDefault ? "Yes" : "" %></th>
        <th><%= area.name %></th>
        <th>
          <%= link_to "Show this area", area %> |
          <%= link_to "Edit this area", edit_area_path(area) %>
          <%= button_to "Up", action: 'up', id: area.id, hierarchy: area.hierarchy, method: :post %>
          <%= button_to "Down", action: 'down', id: area.id, hierarchy: area.hierarchy, method: :post %>
        </th>
      </tr>
  <% end %>
  </table>
</div>

<%= link_to "New area", new_area_path %>
